<div class="d-flex mt-5">
  <div class="w-50">
    <h2 class="dj-header header-center">Hi! I'm <%= @dj.name %></h2>
    <ul class="dj-list-container">
      <li>
        <h4>About me:</h4>
        <p><%= @dj.description %></p>
      </li>
      <li>
        <h4>Price:</h4>
        <p><%= @dj.dj_price %></p>
      </li>
        <li><h4>Genre:</h4>
        <p><%= @dj.genre %></p>
      </li>
        <li><h4>Address:</h4>
        <p><%= @dj.address %></p>
      </li>
    </ul>
  </div>
  <div class="w-50 show-img">
    <%= cl_image_tag(@dj.image.key) %>
  </div>
</div>

<div class="d-flex mt-3">
  <%= link_to 'Take me back', djs_path, class: "btn btn-ghost" %>
  <% if @dj.manager_id == current_user.id %>
  <%= link_to "Delete My DJ",
              dj_path(@dj),
              method: :delete,
              data: { confirm: "Are you sure?" },
              class: "btn btn-ghost" %>
  <% end %>
  <%= link_to 'Book a DJ', new_dj_booking_path(@dj), class: "btn btn-ghost"  %>
</div>